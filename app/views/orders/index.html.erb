<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Period</th>
      <th>Start date</th>
      <th>Address</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.period %></td>
        <td><%= order.start_date %></td>
        <td><%= order.address %></td>
        <td><%= order.phone %></td>
        <td><%= link_to 'Show', site_order_path(order) %></td>
        <td><%= link_to 'Edit', edit_site_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

